<Window x:Class="StudentManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="550">
    <Grid>
        <DataGrid SelectionMode="Single" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,42,0,0" Name="StudentDataGrid" Width="405" 
                  RowHeight="30" ColumnWidth="100" HeadersVisibility="All" Height="432" />
        <Button Grid.Row="0" Grid.Column="0" Content="Add new" Name="AddNew"
        Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Click="AddNew_Click" Margin="0,46,27,0"/>
        <Button Grid.Row="0" Grid.Column="0" Content="Edit" Name="Edit"
            Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Edit_Click" Margin="0,99,27,0"/>
        <Button Grid.Row="0" Grid.Column="0" Content="Delete" Name="Delete"
            Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Delete_Click" Margin="0,152,27,0"/>
    </Grid>
</Window>
